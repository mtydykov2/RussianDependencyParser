import sys

f = open(sys.argv[0])

filename = sys.argv[0]+"_post_processed"

f2 = open(filename, 'w+')

print filename

extra_punct = ",.()*&^%$#@!~`-={}[]\|;:\"'?/,.<>"

for line in f:

    if line[0] in extra_punct:

        f2.write(line[0] + "\n")

        line = line[1:]

    append = ""

    if line[-1] in extra_punct:

        append = line[-1]

        line = line[:-1]

    f2.write(line+"\n")

    f2.write(append)

f2.close()

    



